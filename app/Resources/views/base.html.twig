<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>{% block title %}Bitcoin E-Commerce Store{% endblock %}</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    {% block stylesheets %}
        <!-- Bootstrap core CSS     -->
        <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
        <!--  Material Dashboard CSS    -->
        <link href="/assets/css/material-dashboard.css?v=1.2.0" rel="stylesheet" />
        {# Custom Styles #}
        <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
        <!--     Fonts and icons     -->
        <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
    {% endblock %}
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="purple">
            <div class="logo">
                <img src="/assets/img/bitcoin-icon.png">
                <a href="{{ path('homepage') }}" class="simple-text">
                    Bitcoin E-Commerce Store
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    {% set route = app.request.get('_route') %}
                        <li class="{{ 'homepage' in route ? 'active' }}">
                            <a href="{{ path('homepage') }}">
                                <i class="material-icons">store</i>
                                <p>Store</p>
                            </a>
                        </li>
                        <li class="{{ route in ['product_index', 'product_new'] ? 'active' }}">
                            <a href="{{ path('product_index') }}">
                                <i class="material-icons">local_offer</i>
                                <p>Manage Products</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="main-panel">
                {% block body %}
                {% endblock %}
                <footer class="footer">
                    <div class="container-fluid">

                        <blockquote>
                            <p>
                                This is a basic example of a Bitcoin ecommerce site. This solution is intended for small shops with few products.
                            </p>
                        </blockquote>

                        <p class="copyright pull-right">
                            &copy;
                            <script>
                            document.write(new Date().getFullYear())
                            </script>
                            An experiment project by <a href="http://elvismdev.io">@elvismdev</a>
                        </p>
                    </div>
                </footer>
            </div>
        </div>
    </body>
    {% block javascripts %}
        <!--   Core JS Files   -->
        <script src="/assets/js/jquery-3.2.1.min.js" type="text/javascript"></script>
        <script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/assets/js/material.min.js" type="text/javascript"></script>
        <script src="/assets/js/material-dashboard.js?v=1.2.0"></script>

        {# JS to fetch the bitcoin value converted from dollar amount #}        
        {% if app.request.get('_route') in ['product_show', 'product_checkout'] %}
            <script type="text/javascript">

        // async function
        async function fetchAsync (endpoint) {
            let response = await fetch(endpoint, {
                method:'GET'
            });
            let data = await response.json();
            return data;
        }

        // Get and display Bitcoin Price.
        let bitcoinPrice = document.getElementById('bitcoin-price');
        let uri = "{{ tobtc_endpoint|e('js') }}{{ product.price }}"
        fetchAsync(uri)
        .then(function(data) {
            bitcoinPrice.textContent = data.toFixed(4);
        })
        .catch(function(error) {
            console.log(error);
        });

        </script>

    {% endif %}


{% endblock %}
</html>
