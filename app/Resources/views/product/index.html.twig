{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header" data-background-color="purple">
                            <h4 class="title">Products list</h4>
                            {# <p class="category">Here is a subtitle for this table</p> #}
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Updated At</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.id }}</td>
                                            <td><a href="{{ path('admin_product_show', { 'slug': product.slug }) }}">{{ product.title }}</a></td>
                                            <td class="text-primary">${{ product.price }}</td>
                                            <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td class="actions">
                                                <ul>
                                                    <li>
                                                        <a href="{{ path('admin_product_show', { 'slug': product.slug }) }}"><i class="material-icons">remove_red_eye</i> Show</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('admin_product_edit', { 'id': product.id }) }}"><i class="material-icons">mode_edit</i> Edit</a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                            <button class="btn btn-primary pull-right"><a href="{{ path('admin_product_new') }}">Create a new product</a></button>
                        </div>
                    </div>
                </div>
            </div>  
        </div>  
    </div>
{% endblock %}
