{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                {% for product in products %}
                    <div class="product">
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="card card-stats">
                                <a href="{{ path('product_show', { 'slug': product.slug }) }}">
                                    <div class="card-header" data-background-color="orange">
                                        <i class="material-icons">camera_alt</i>
                                    </div>
                                </a>
                                <div class="card-content">
                                    <p class="category"><a href="{{ path('product_show', { 'slug': product.slug }) }}">{{ product.title }}</a></p>
                                    <h3 class="title">${{ product.price }}
                                        <small>USD</small>
                                    </h3>
                                </div>
                                <div class="card-footer">
                                    <div class="stats">
                                        <i class="material-icons">add_shopping_cart</i>
                                        <a href="{{ path('product_show', { 'slug': product.slug, 'quick_checkout': 1 }) }}">Buy Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %} 
            </div>
        </div>
    </div>
{% endblock %}

